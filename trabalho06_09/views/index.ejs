<%- include('partials/header.ejs') %>

    <body>
        <%- include('partials/navbar.ejs') %>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 offset-md-3 text-center mt-5">
                        <h1 class="display-4">Hello World</h1>
                        <p class="lead">Bem vindo ao minha pagina Hello World!</p>
                    </div>
                </div>
                <br>
                <h1>Perguntas</h1>
                <hr>
                <a href="/question" target="_blank" rel="noopener noreferrer" class="btn btn-primary">Nova Pergunta</a>
                <hr>
                <% perguntas.forEach(p=>{ %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <h4>
                                <%= p.titulo %>
                            </h4>
                        </div>
                        <div class="footer">
                            <a href="/question/<%= p.id %>">
                                <button type="button" class="btn btn-primary">Responder</button>
                            </a>
                        </div>
                    </div>

                    <% }) %>
            </div>
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </body>
    <%- include('partials/footer.ejs') %>